<%- include('partials/log_header') -%>

<head>
  
  <title>Memwa FIND</title>
</head>
<section class="searchArea">
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="/imgs/logo.svg" alt="Memwa" width="120" height="120">
        <h1 class="display-5 fw-bold">Memwa FIND</h1>
        <h5>Find and Browse through stories</h5> 
        <h6>Browse through <b>2,100</b> stories from <b>69</b> countries</h6>
      </div>
      <div >
      <div class="search-container">
          <div class="input-group mb-2">
            <div class="form-outline col-lg-10 mx-auto">
                <form class="find" action="/find" method="GET">
                  <input type="text" placeholder="Search for stories or people"  id="search-input" class="form-control" name="searchTerm" value="<%=searchTerm%>"/>
              <button type="submit" class="btn btn-primary" >
                <i class="fas fa-search"></i>
              </button>
              </form>
            </div>  
          </div> 
        </div>
          <div class="form-outline col-lg-10 mx-auto">
            <% if(posts.length > 0 && searchTerm != undefined) {%>
              <ul class="multi-column">
                <% posts.forEach(post => { %>
                <a href="/post/<%= post.id%>"><li><%=post.title %></li></a>
              <% }) %>
              </ul>
              <%} else if(searchTerm == undefined) {%>
                <!-- <h3 class="hidden">Enter a search</h3> -->
              <%}else {%>
                <h3>No Results</h3>
              <% } %>
          </div>
      </div>
  
</section>
<%- include('partials/footer') -%>